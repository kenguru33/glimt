# === ENVIRONMENT ===
export PATH="$HOME/.local/bin:$PATH"

# === Completion ===
fpath=("$HOME/.zsh/completions" $fpath)
autoload -Uz compinit
compinit

# Set history file location and size
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000

# History behavior
setopt APPEND_HISTORY          # Append to history file instead of overwriting
setopt HIST_IGNORE_ALL_DUPS    # Ignore duplicated commands
setopt HIST_REDUCE_BLANKS      # Remove superfluous blanks
setopt INC_APPEND_HISTORY      # Write to history immediately, not just on shell exit
setopt SHARE_HISTORY           # Share command history across all sessions


# === Load per-tool configs ===
for file in "$HOME/.zsh/config"/*.zsh; do
  source "$file"
done

# === Local overrides ===
[[ -f "$HOME/.zshrc.local" ]] && source "$HOME/.zshrc.local"
